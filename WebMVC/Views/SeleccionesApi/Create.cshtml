@model WebMVC.Models.SeleccionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<span>@ViewBag.Error</span>
<h4>SeleccionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreSeleccion" class="control-label"></label>
                <input asp-for="NombreSeleccion" class="form-control" />
                <span asp-validation-for="NombreSeleccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGrupo" class="control-label"></label>
                <input asp-for="IdGrupo" class="form-control" />
                <span asp-validation-for="IdGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="IdPaisSeleccionado" id="Paises">
                    @foreach (var pais in Model.Paises)
                    {
                        <option value="@pais.Id">@pais.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <select name="IdGrupoSeleccionado" id="Grupos">
                    @foreach (var grupo in Model.Grupos)
                    {
                        <option value="@grupo.Id">@grupo.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
