@model  LogicaNegocio.Dominio.Seleccion
                                                    
    @*@{ ViewData["Title"]="BuscarId" ; }*@

<h1>Buscar Selección por Id</h1>
<span>@ViewBag.Error</span>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="id" name="id">Id:</label>
                <input id="id" name="id" asp-for="Id">
            </div>

            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais.CodigoISOAlfa3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadApostadores)
            </th>
            <th>
               
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Id)
            </td>

            <td>
                @Html.DisplayFor(model => model.Nombre)
            </td>
            <td>
                @Html.DisplayFor(model => model.Pais.Nombre)
            </td>
            <td>
                @Html.DisplayFor(model => model.Pais.CodigoISOAlfa3)
            </td>
            <td>
                <image src="Banderas/@Url.Content(Model.Pais.Imagen)" height="50px"> </image>
            </td>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.Telefono)
            </td>
            <td>
                @Html.DisplayFor(model => model.Grupo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(model => model.CantidadApostadores)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Details", "Details", new { id = Model.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
            </td>

        </tr>

    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

