@model WebMVC.Models.SeleccionViewModel

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<span>@ViewBag.Error</span>
<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="Seleccion.Id" value="@Model.Seleccion.Id" />
            <input type="hidden" name="Seleccion.PaisId" value="@Model.Seleccion.PaisId" />

            <div class="form-group">
                <label asp-for="NombreSeleccion" class="control-label"></label>
                <input asp-for="NombreSeleccion" class="form-control" />
                <span asp-validation-for="NombreSeleccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="IdPaisSeleccionado">
                    @foreach (var pais in Model.Paises)
                    {
                        if (pais.Id == Model.IdPaisSeleccionado)
                        {
                            <option value="@pais.Id" selected>@pais.Nombre</option>
                        }
                        else
                        {
                            <option value="@pais.Id">@pais.Nombre</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <select name="IdGrupoSeleccionado">
                    @foreach (var grupo in Model.Grupos)
                    {
                        if (grupo.Id == Model.IdGrupoSeleccionado)
                        {
                            <option value="@grupo.Id" selected>@grupo.Nombre</option>
                        }
                        else
                        {
                            <option value="@grupo.Id">@grupo.Nombre</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}