@model WebMVC.Models.PaisViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nuevo.Nombre" class="control-label"></label>
                <input asp-for="Nuevo.Nombre" class="form-control" />
                <span asp-validation-for="Nuevo.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nuevo.CodigoISOAlfa3" class="control-label"></label>
                <input asp-for="Nuevo.CodigoISOAlfa3" class="form-control" />
                <span asp-validation-for="Nuevo.CodigoISOAlfa3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nuevo.Pbi" class="control-label"></label>
                <input asp-for="Nuevo.Pbi" class="form-control" />
                <span asp-validation-for="Nuevo.Pbi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nuevo.Poblacion" class="control-label"></label>
                <input asp-for="Nuevo.Poblacion" class="form-control" />
                <span asp-validation-for="Nuevo.Poblacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nuevo.Imagen" class="control-label"></label>
                <input asp-for="Nuevo.Imagen" class="form-control" />
                <span asp-validation-for="Nuevo.Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select id="Regiones" name="IdRegion">
                    @foreach (var region in Model.Regiones)
                    {
                        <option value="@region.Id">@region.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
