@model LogicaNegocio.Dominio.Seleccion

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Buscar Por Id</title>
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="BuscarId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="id" name="id">Id:</label>
                    <input id="id" name="id" asp-for="Id">
                </div>

                <div class="form-group">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <p>
        <a asp-action="Index">Back to index</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pais)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pais.CodigoISOAlfa3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pais.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grupo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CantidadApostadores)
                </th>
            </tr>
        </thead>
        <tbody>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Pais.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Pais.CodigoISOAlfa3)
                    </td>
                    <td>
                        <image src="Banderas/Pais.Imagen" height="50px"> </image>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Grupo.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CantidadApostadores)
                    </td>

                </tr>
            
        </tbody>
    </table>
</body>
</html>
