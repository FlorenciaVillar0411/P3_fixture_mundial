@model WebMVC.Models.PaisRegionModel
@{ ViewData["Title"] = "PaisPorRegion"; }


<h1>View</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="PaisPorRegion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select id="Regiones" name="IdRegion" asp-for="IdRegion">
                    @foreach (var region in Model.Regiones)
                    {
                        <option value="@region.Id">@region.Nombre</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h4>Pais</h4>
<hr />
<div>
    @ViewBag.msg
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pais.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais.CodigoISOAlfa3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais.Pbi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais.Poblacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais.RegionId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Paises)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoISOAlfa3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pbi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Poblacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Imagen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
